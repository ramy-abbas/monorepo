  <name>sakai-scorm-service-impl</name>
  <groupId>org.sakaiproject.scorm</groupId>
  <artifactId>sakai-scorm-service-impl</artifactId>
  <description>
          This project creates the service implementation used by the Sakai Scorm Tool
        </description>
  <packaging>jar</packaging>
  <dependencies>
    <!-- SCORM dependencies -->
    <dependency>
      <groupId>org.sakaiproject.scorm</groupId>
      <artifactId>sakai-scorm-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject.scorm</groupId>
      <artifactId>sakai-scorm-adl-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject.scorm</groupId>
      <artifactId>sakai-scorm-content-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject.scorm</groupId>
      <artifactId>sakai-scorm-model-impl</artifactId>
    </dependency>
    <!-- External dependencies -->
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>activation</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>

