{{#if displayTitleMsg}}
	<span class="instruction rosterTitleMessage">{{translate 'title_msg'}}</span>
{{/if}}

<div id="roster-filters" class="row">
    {{#if viewGroup}}
    <div class="form-group col-sm-6 col-xs-12" id="roster-group-selector-wrapper">
        <div class="row">
            <label for="roster-groups-selector-top" class="form-control-label col-sm-3 col-xs-12">{{translate 'groups'}}</label>
            <div class="col-sm-9 col-xs-12">
                <select id="roster-groups-selector-top">
                    <option value="all">{{translate 'roster_sections_all'}}</option>
                    {{#each siteGroups}}
                    <option id="roster-group-option-{{id}}" value="{{id}}">{{title}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    {{/if}}
    <div class="form-group col-sm-6 col-xs-12" id="roster-roles-selector-wrapper">        
        <div class="row">
            <label for="roster-roles-selector" class="form-control-label col-sm-3 col-xs-12">{{translate 'roles_label'}}</label>
            <div class="col-sm-9 col-xs-12">
                <select id="roster-roles-selector">
                    <option value="all">{{translate 'roster_sections_all'}}</option>
                    {{#each roles}}
                    <option id="roster-role-option-{{this}}" value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div id="roster-search-group" class="col-sm-6 col-xs-12">
        <div class="form-group row">
            <label for="roster-search-field" class="form-control-label col-sm-3 col-xs-12">{{translate 'roster_search_text'}}</label>
            <div class="col-sm-9 col-xs-12">
                <input id="roster-search-field" type="text" value="{{#if searchQuery}}{{searchQuery}}{{/if}}" name="roster_form_search" />
                <input id="roster-search-button" class="active" type="button" value="{{translate 'roster_search_button'}}" name="roster_form:search_button" />
                <input id="roster_form_clear_button" type="button" class="btn btn-default" value="{{translate 'roster_clear_button'}}" name="roster_form:clear_button" />		
            </div>	
         </div>
    </div>

    <div id="roster_type_selector" class="col-sm-6 col-xs-12">
        {{#if viewOfficialPhoto}}
        <div class="row">
            <div class="col-sm-3 col-xs-12">
                <span class="official-label">{{translate 'official_label'}}</span>
            </div>
            <div class="col-sm-9 col-xs-12">
                <span class="switch-button {{#if checkOfficialPicturesButton}}on{{/if}}" id="switch-button"></span>
            </div>
        </div>
        <div class="form-inline hidden">
            <div class="form-group">
                <div class="radio">
                    <label>
                    <input style="margin-right: 1em;" type="radio" name="roster_picture_type" value="official" id="roster_official_picture_button" {{#if checkOfficialPicturesButton}}checked{{/if}}/><span>{{translate 'roster_show_official_pictures'}}</span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="radio">
                    <label>
                    <input style="margin-right: 1em;" type="radio" name="roster_picture_type" value="profile" id="roster_profile_picture_button" {{#unless checkOfficialPicturesButton}}checked{{/unless}}/><span>{{translate 'roster_show_profile_pictures'}}</span>
                    </label>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<div id="summary">
    <span>
        <span id="roster-members-total" class="rosterRoleTopLine">{{membersTotal}}</span>
        <span id="roster-role-totals" class="rosterRoleBottomLine">{{roleFragments}}</span>
    </span> 
</div>

<div class="row">
    <div class="form-group pull-right">
        <button class="roster-print-button btn btn-default">{{translate 'print_roster'}}</button>
        <label id="roster-pictures-only-label" class="hidden">
            <input type="checkbox" id="roster-pictures-only-button" />
            {{translate 'pictures_only'}}
        </label>
    </div>
</div>

<div id="roster-members-content"></div>
<div id="roster-loading-image"><img src="/sakai-roster2-tool/images/ajax-loader.gif" /></div>
<div class="row">
    <div class="form-group pull-right">
        <button class="roster-print-button btn btn-default">{{translate 'print_roster'}}</button>
    </div>
</div>
