<?xml version="1.0" encoding="UTF-8"?>
<project>
	<pomVersion>3</pomVersion>
	<extend>../../../master/project.xml</extend>
	<id>sakai-scorm-content-impl</id>
	<name>sakai-scorm-content-impl</name>
	<shortDescription>Sakai Scorm Content Implementation</shortDescription>

   	<properties>
		<deploy.type>jar</deploy.type>
	</properties>

	<dependencies>
		<!-- Plugin dependency -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai</artifactId>
			<version>${sakai.plugin.version}</version>
			<type>plugin</type>
		</dependency>

		<!-- SCORM dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-scorm-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
				
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-scorm-adl-impl</artifactId>
			<version>${sakai.version}</version>
		</dependency>
				
		<!-- Sakai dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-util</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-event-api</artifactId>
			<version>${sakai.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
		<!-- External dependencies -->
		<dependency>
			<groupId>activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>xpp3</groupId>
			<artifactId>xpp3</artifactId>
			<version>1.1.3.3</version>
		</dependency>
		<dependency>
                        <groupId>ehcache</groupId>
                        <artifactId>ehcache</artifactId>
                        <version>1.1</version>
                </dependency>

	</dependencies>
	<build>
		<sourceDirectory>src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/java</directory>
			</resource>
		</resources>

	</build>

</project>

